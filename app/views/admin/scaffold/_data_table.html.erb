<% content_for :head do -%>
	<% javascript_tag do -%>
	$(function(){
		$("#table").dataTable( {
			"aaSorting": <%= sort rescue '[[ 0, "asc" ]]' %>,
			"sPaginationType": "full_numbers",
			"bStateSave": true,
			"bInfo": false,
			"iDisplayLength": 50,
			"oLanguage": {
				"sUrl": "/javascripts/plugins/data_tables_<%= I18n.locale %>.js"
			}
		}).css("width", "auto");
	});
	<% end -%>
<% end -%>