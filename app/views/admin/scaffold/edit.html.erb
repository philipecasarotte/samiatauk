<h1>Editing <%= @object.class %></h1>

<%= error_messages_for @object.class.to_s.underscore.to_sym %>

<% form_for(@object, :url => object_url, :html => { :method => :put, :class => "validate", :multipart => true }) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <p class="submit"><%=submit_tag "Update"%></p>
<% end %>

<br/>

<%= link_to 'Back', collection_url %>