<li id="page_<%= page.id %>">
	<% if page.children.size > 0 %>
		<%=link_to image_tag("act_as_tree/open.gif", :size => "20x16", :alt => ""), admin_pages_url(:parent_id => page, :format => :js), :class => "first" %>
	<% else %>
		<%= image_tag "act_as_tree/simple.gif", :size => "20x16", :alt => "" %>
	<% end %>
	<span><%=h page.name %></span>
	<div>
		<%=link_to t(:reorder_children), reorder_admin_pages_url(:parent_id => page.id) if page.children.size > 1  %>
		<%=link_to t(:new_child), new_admin_page_url(:parent_id => page.id) %>
		<%=link_to t(:edit), edit_object_url(page) %>
		<%=link_to t(:destroy), object_url(page), :confirm => t(:are_you_sure), :method => :delete unless page.is_protected %>
	</div>
</li>
